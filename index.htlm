<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Symphony Pro | AI Studio Premium</title>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Inter:wght@300;500;700&display=swap" rel="stylesheet">
    <style>
        :root { 
            --gold: #ffd700; --blue: #00f2ff; --purple: #bc13fe; 
            --dark: #050507; --card-bg: rgba(20, 20, 25, 0.8);
            --border: rgba(255, 255, 255, 0.1);
        }

        body { 
            font-family: 'Inter', sans-serif; 
            background: radial-gradient(circle at top, #1a1a2e 0%, var(--dark) 100%); 
            color: white; margin: 0; padding: 10px;
            min-height: 100vh;
            display: flex; justify-content: center;
        }

        .container { 
            width: 100%; max-width: 1100px; 
            display: grid; grid-template-columns: 1fr 350px; gap: 20px; 
            margin-top: 20px;
        }

        @media (max-width: 900px) { .container { grid-template-columns: 1fr; } }

        .card { 
            background: var(--card-bg); 
            backdrop-filter: blur(15px);
            border: 1px solid var(--border); 
            border-radius: 30px; padding: 40px; 
            box-shadow: 0 25px 50px rgba(0,0,0,0.8);
        }

        h1 { font-family: 'Orbitron', sans-serif; font-size: 2em; letter-spacing: 2px; background: linear-gradient(to right, var(--blue), var(--purple)); -webkit-background-clip: text; -webkit-text-fill-color: transparent; }

        /* VIP & Login */
        #vip-tag { display: none; background: linear-gradient(90deg, #000, var(--gold), #000); color: black; padding: 10px; border-radius: 12px; font-weight: 800; text-align: center; margin-bottom: 20px; border: 1px solid var(--gold); }
        .login-section { background: rgba(255,255,255,0.03); padding: 25px; border-radius: 20px; border: 1px dashed #444; margin-bottom: 25px; }

        /* Genre Grid - Multi select */
        .genre-grid { 
            display: grid; grid-template-columns: repeat(auto-fill, minmax(110px, 1fr)); 
            gap: 10px; margin: 20px 0; 
        }
        .genre-chip { 
            padding: 8px; border-radius: 10px; background: #111; border: 1px solid #333; 
            font-size: 0.8em; cursor: pointer; text-align: center; transition: 0.2s;
        }
        .genre-chip.active { 
            background: var(--blue); color: black; font-weight: bold; border-color: var(--blue);
            box-shadow: 0 0 15px rgba(0, 242, 255, 0.4);
        }

        /* Form Elements */
        textarea, input { 
            width: 100%; padding: 15px; border-radius: 15px; border: 1px solid #333; 
            background: rgba(0,0,0,0.5); color: white; margin-bottom: 15px; font-size: 1em;
        }
        textarea:focus { border-color: var(--blue); outline: none; }

        .btn-gen { 
            width: 100%; padding: 22px; border-radius: 18px; border: none; 
            background: linear-gradient(45deg, var(--purple), var(--blue)); 
            color: white; font-weight: 900; font-size: 1.3em; cursor: pointer; 
            transition: 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }
        .btn-gen:hover { transform: translateY(-5px); box-shadow: 0 15px 30px rgba(188, 19, 254, 0.4); }

        /* Visuals */
        .player-zone { background: #000; padding: 20px; border-radius: 20px; margin-top: 30px; border: 1px solid var(--purple); }
        canvas { width: 100%; height: 80px; }
        
        .progress-bar { width: 0%; height: 4px; background: var(--blue); position: absolute; top: 0; left: 0; transition: width 0.5s; }
        
        .sidebar { background: var(--card-bg); border-radius: 30px; padding: 25px; border: 1px solid var(--border); height: fit-content; }
        .history-item { 
            background: rgba(255,255,255,0.03); padding: 15px; border-radius: 15px; 
            margin-bottom: 12px; border-left: 4px solid var(--blue);
        }
    </style>
</head>
<body>

<div class="container">
    <div class="card" style="position: relative; overflow: hidden;">
        <div id="progress" class="progress-bar"></div>
        <div id="vip-tag">ðŸ‘‘ ACCESO TOTAL: SISTEMA DESBLOQUEADO</div>

        <div id="login-area" class="login-section">
            <h3 style="margin-top:0">ðŸ”‘ Acceso al Studio</h3>
            <div style="display:flex; gap:10px;">
                <input type="email" id="email-input" placeholder="tu@correo.com" style="margin-bottom:0">
                <button onclick="auth()" style="padding:0 25px; border-radius:12px; cursor:pointer; background:white; font-weight:bold; border:none;">LOGIN</button>
            </div>
        </div>

        <h1>Symphony IA Studio</h1>
        
        <div style="display:flex; justify-content:space-between; margin-bottom:20px; opacity:0.7; font-size:0.9em;">
            <span>CrÃ©ditos: <b id="t-count" style="color:var(--blue)">100</b></span>
            <span id="user-type">Standard Plan</span>
        </div>

        <textarea id="lyrics" rows="3" placeholder="Describe la letra o el sentimiento de la canciÃ³n..."></textarea>
        <input type="text" id="artist" placeholder="Influencia de artista (ej: Bad Bunny, Hans Zimmer, Metallica)">

        <label style="color:var(--blue); font-weight:bold; font-size:0.8em; letter-spacing:1px;">MEZCLA DE GÃ‰NEROS (SELECCIONA VARIOS)</label>
        <div class="genre-grid" id="genre-container">
            <div class="genre-chip" onclick="toggleGenre(this)" data-val="reggaeton">ReggaetÃ³n</div>
            <div class="genre-chip" onclick="toggleGenre(this)" data-val="trap">Trap</div>
            <div class="genre-chip" onclick="toggleGenre(this)" data-val="corridos-tumbados">Corridos</div>
            <div class="genre-chip" onclick="toggleGenre(this)" data-val="phonk">Phonk</div>
            <div class="genre-chip" onclick="toggleGenre(this)" data-val="pop">Pop</div>
            <div class="genre-chip" onclick="toggleGenre(this)" data-val="techno">Techno</div>
            <div class="genre-chip" onclick="toggleGenre(this)" data-val="heavy-metal">Metal</div>
            <div class="genre-chip" onclick="toggleGenre(this)" data-val="synthwave">Synthwave</div>
            <div class="genre-chip" onclick="toggleGenre(this)" data-val="lofi">Lo-Fi</div>
            <div class="genre-chip" onclick="toggleGenre(this)" data-val="bachata">Bachata</div>
            <div class="genre-chip" onclick="toggleGenre(this)" data-val="classical">ClÃ¡sica</div>
            <div class="genre-chip" onclick="toggleGenre(this)" data-val="jazz">Jazz</div>
        </div>

        <button class="btn-gen" onclick="generate()">FUSIONAR Y GENERAR</button>
        
        <div id="loader" style="display:none; text-align:center; margin-top:25px; color:var(--blue);">
            <div class="spinner"></div>
            <p id="status-text">ðŸ§  Sincronizando Redes...</p>
        </div>

        <div id="player-zone" class="player-zone" style="display:none;">
            <canvas id="vis"></canvas>
            <audio id="audio" controls style="width:100%; margin: 15px 0; filter: invert(1);"></audio>
            <h4 id="now-playing" style="color:var(--blue); margin:0; font-family:'Orbitron';"></h4>
        </div>
    </div>

    <div class="sidebar">
        <h3 style="margin-top:0; font-family:'Orbitron'; font-size:1em; color:var(--purple);">RECENT MASTERING</h3>
        <div id="history"></div>
    </div>
</div>

<script>
    const TOKEN = "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"; 
    let tokens = 100;
    let isVip = false;
    let selectedGenres = [];

    function toggleGenre(el) {
        const val = el.getAttribute('data-val');
        if(el.classList.contains('active')) {
            el.classList.remove('active');
            selectedGenres = selectedGenres.filter(g => g !== val);
        } else {
            el.classList.add('active');
            selectedGenres.push(val);
        }
    }

    function auth() {
        const mail = document.getElementById('email-input').value.toLowerCase().trim();
        const vips = ["kiatocamarena@gmail.com", "braytoncamarena7@gmail.com"];
        if(vips.includes(mail)) {
            isVip = true; tokens = Infinity;
            document.getElementById('vip-tag').style.display = "block";
            document.getElementById('t-count').innerText = "âˆž";
            document.getElementById('user-type').innerText = "ADMIN ACCESS";
            document.getElementById('login-area').style.display = "none";
        } else {
            document.getElementById('login-area').style.display = "none";
        }
    }

    async function generate() {
        if(!isVip && tokens <= 0) return alert("Sin crÃ©ditos.");
        const lyr = document.getElementById('lyrics').value;
        const art = document.getElementById('artist').value;
        
        if(!lyr || selectedGenres.length === 0) return alert("Escribe algo y selecciona al menos un gÃ©nero.");

        const loader = document.getElementById('loader');
        const progress = document.getElementById('progress');
        loader.style.display = "block";
        progress.style.width = "40%";

        try {
            const genresStr = selectedGenres.join(" blended with ");
            const prompt = `Professional master quality, ${genresStr} style, influenced by ${art}, mood: ${lyr}`;
            
            const response = await fetch("https://api-inference.huggingface.co/models/facebook/musicgen-small", {
                headers: { Authorization: `Bearer ${TOKEN}` },
                method: "POST",
                body: JSON.stringify({ inputs: prompt }),
            });

            progress.style.width = "80%";
            const blob = await response.blob();
            const url = URL.createObjectURL(blob);

            if(!isVip) tokens--;
            document.getElementById('t-count').innerText = isVip ? "âˆž" : tokens;

            document.getElementById('audio').src = url;
            document.getElementById('now-playing').innerText = `MASTER: ${art || 'Original'}`;
            document.getElementById('player-zone').style.display = "block";
            
            const h = document.getElementById('history');
            h.innerHTML = `<div class="history-item"><b>${art || 'AI Artist'}</b><br><small>${selectedGenres.join(' + ')}</small></div>` + h.innerHTML;

            progress.style.width = "100%";
            setTimeout(() => progress.style.width = "0%", 1000);
            startVisualizer();
        } catch(e) {
            alert("Servidor ocupado. Reintentando...");
        }
        loader.style.display = "none";
    }

    let aCtx, analyser;
    function startVisualizer() {
        if(aCtx) return;
        const audio = document.getElementById('audio');
        aCtx = new (window.AudioContext || window.webkitAudioContext)();
        analyser = aCtx.createAnalyser();
        const source = aCtx.createMediaElementSource(audio);
        source.connect(analyser); analyser.connect(aCtx.destination);
        const canvas = document.getElementById('vis');
        const ctx = canvas.getContext('2d');
        const data = new Uint8Array(analyser.frequencyBinCount);

        function render() {
            requestAnimationFrame(render);
            analyser.getByteFrequencyData(data);
            ctx.clearRect(0,0,canvas.width,canvas.height);
            data.forEach((v, i) => {
                if(i % 4 === 0) {
                    ctx.fillStyle = i % 2 === 0 ? '#00f2ff' : '#bc13fe';
                    ctx.fillRect(i * 1.5, canvas.height - v/3, 3, v/3);
                }
            });
        }
        render();
    }
</script>
</body>
</html>
  
